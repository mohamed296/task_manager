{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "es2022"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "./global.d.ts",
    "./node_modules/@types"
  ],
  "include": [
    "./src/**/*",
    "./types/**/*"
  ]
}
